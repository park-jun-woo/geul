{{ "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {{- range .Data.Pages }}
  {{- if not .Params.sitemap.disable }}
  {{- if ne .Section "languages" }}
  {{- if ne .Kind "taxonomy" }}
  {{- if ne .Kind "term" }}
  <url>
    <loc>{{ .Permalink }}</loc>
    {{- if not .Lastmod.IsZero }}
    <lastmod>{{ .Lastmod.Format "2006-01-02T15:04:05-07:00" }}</lastmod>
    {{- end }}
    <changefreq>{{ with .Sitemap.ChangeFreq }}{{ . }}{{ else }}weekly{{ end }}</changefreq>
    <priority>{{ if eq .Kind "home" }}1.0{{ else if eq .Kind "section" }}0.8{{ else }}0.6{{ end }}</priority>
    {{- if .IsTranslated }}
    {{- range .Translations }}
    <xhtml:link rel="alternate" hreflang="{{ .Language.Lang }}" href="{{ .Permalink }}" />
    {{- end }}
    <xhtml:link rel="alternate" hreflang="{{ .Language.Lang }}" href="{{ .Permalink }}" />
    <xhtml:link rel="alternate" hreflang="x-default" href="{{ (index (where .AllTranslations "Language.Lang" "en") 0).Permalink }}" />
    {{- end }}
  </url>
  {{- end }}
  {{- end }}
  {{- end }}
  {{- end }}
  {{- end }}
</urlset>
